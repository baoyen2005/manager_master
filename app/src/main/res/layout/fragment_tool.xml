<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CleanFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <com.google.android.material.appbar.MaterialToolbar
           android:id="@+id/toolbarTool"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_gravity="center"
           android:background="@color/purple_200"
           app:navigationIcon="@drawable/ic_baseline_menu_24"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/TextAppearance.AppCompat.Title"
               android:text="Công cụ"
               android:layout_marginLeft="100dp"
               android:textColor="#FF00"
               android:textSize="17sp"/>
           <ImageView
               android:src="@drawable/canhbao"
               android:layout_marginLeft="100dp"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
       </com.google.android.material.appbar.MaterialToolbar>
       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:id="@+id/relativeRam"
               android:padding="10dp"
               android:layout_gravity="center"
               android:orientation="horizontal"
               android:layout_marginBottom="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imgRam"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentLeft="true"
                   android:src="@drawable/tangram"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_alignParentStart="true"/>

               <TextView
                   android:id="@+id/tvRam"
                   android:layout_marginTop="15dp"
                   android:gravity="center"
                   android:layout_marginStart="10dp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:textSize="13sp"
                   android:layout_toEndOf="@id/imgRam"
                   android:layout_toLeftOf="@+id/imgRam"
                   android:layout_alignParentTop="true"
                   android:text="Sử dụng RAM cao và điện thoại chậm hơn. Đẩy nhanh!"/>
               <Button
                   android:id="@+id/btnTangTocTool"
                   app:backgroundTint="@null"
                   android:background="@color/cafe"
                   android:layout_marginTop="10dp"
                   android:textColor="@color/black"
                   android:text="Tăng tốc ngay"
                   android:textSize="18sp"
                   android:textAllCaps="false"
                   android:layout_alignParentLeft="true"
                   android:layout_below="@id/imgRam"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="2dp"
               android:background="@color/white"
               android:gravity="center"
               android:padding="10dp">

               <TextView
                   android:layout_alignParentTop="true"
                   android:layout_alignParentStart="true"
                   android:id="@+id/tvRecently"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Phương tiện gần đây" />

               <ImageButton
                   android:id="@+id/imgButtonMenu_Tool"
                   android:src="@drawable/ic_baseline_more_horiz_24"
                   android:layout_alignParentEnd="true"
                   android:background="?attr/actionBarItemBackground"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <androidx.recyclerview.widget.RecyclerView
                   android:layout_below="@id/tvRecently"
                   android:id="@+id/recycle_recently"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_alignParentStart="true"
                   android:overScrollMode="never"
                   />
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@color/white"
               android:gravity="center"
               android:padding="10dp"
               android:overScrollMode="never"
               >
               <TextView
                   android:id="@+id/txt3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:text="THỂ LOẠI"
                   android:textSize="15sp" />
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/mGridViewType"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/txt3"
                   android:layout_marginBottom="5dp"
                   android:overScrollMode="never"

                   />
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@color/white"
               android:gravity="center"
               android:padding="10dp">
               <TextView
                   android:id="@+id/txt4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:text="TỐI ƯU ĐIỆN THOẠI"
                   android:textSize="15sp"
                   tools:ignore="HardcodedText" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/mGridViewMin"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_below="@+id/txt4"
                   android:layout_alignParentStart="true"
                   android:overScrollMode="never" />
           </RelativeLayout>
       </LinearLayout>
   </LinearLayout>

</androidx.core.widget.NestedScrollView>
